<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.driver.mapper.LtDriverMapper">
    
    <resultMap type="LtDriver" id="LtDriverResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="jobNumber"    column="job_number"    />
        <result property="licenseNo"    column="license_no"    />
        <result property="licenseType"    column="license_type"    />
        <result property="licenseDate"    column="license_date"    />
        <result property="state"    column="state"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectLtDriverVo">
        select id, user_id, job_number, license_no, license_type, license_date, state, create_time, update_time from LT_driver
    </sql>

    <select id="selectLtDriverList" parameterType="LtDriver" resultMap="LtDriverResult">
        <include refid="selectLtDriverVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="jobNumber != null  and jobNumber != ''"> and job_number = #{jobNumber}</if>
            <if test="licenseNo != null  and licenseNo != ''"> and license_no = #{licenseNo}</if>
            <if test="licenseType != null  and licenseType != ''"> and license_type = #{licenseType}</if>
            <if test="licenseDate != null "> and license_date = #{licenseDate}</if>
            <if test="state != null "> and state = #{state}</if>
        </where>
    </select>
    
    <select id="selectLtDriverById" parameterType="Long" resultMap="LtDriverResult">
        <include refid="selectLtDriverVo"/>
        where id = #{id}
    </select>

    <insert id="insertLtDriver" parameterType="LtDriver" useGeneratedKeys="true" keyProperty="id">
        insert into LT_driver
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="jobNumber != null">job_number,</if>
            <if test="licenseNo != null">license_no,</if>
            <if test="licenseType != null">license_type,</if>
            <if test="licenseDate != null">license_date,</if>
            <if test="state != null">state,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="jobNumber != null">#{jobNumber},</if>
            <if test="licenseNo != null">#{licenseNo},</if>
            <if test="licenseType != null">#{licenseType},</if>
            <if test="licenseDate != null">#{licenseDate},</if>
            <if test="state != null">#{state},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateLtDriver" parameterType="LtDriver">
        update LT_driver
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="jobNumber != null">job_number = #{jobNumber},</if>
            <if test="licenseNo != null">license_no = #{licenseNo},</if>
            <if test="licenseType != null">license_type = #{licenseType},</if>
            <if test="licenseDate != null">license_date = #{licenseDate},</if>
            <if test="state != null">state = #{state},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLtDriverById" parameterType="Long">
        delete from LT_driver where id = #{id}
    </delete>

    <delete id="deleteLtDriverByIds" parameterType="String">
        delete from LT_driver where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>